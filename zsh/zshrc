# this is what zsh sources first on bootup

# source prezto
if [[ -s "${ZDOTDIR:-$HOME}/.dotfiles/zsh/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.dotfiles/zsh/init.zsh"
fi


# vi movement in iTerm
set -o vi

#bindkey -v

# _source
source ~/.dotfiles/zsh/zenv
source ~/.dotfiles/zsh/zcd
source ~/.dotfiles/vim/zvim
source ~/.dotfiles/zsh/zfunctions
source ~/.dotfiles/zsh/zdev
source ~/.dotfiles/git/zgit
source ~/.dotfiles/zsh/zalias
source ~/.dotfiles/zsh/zapp
source ~/.dotfiles/zsh/zscripts

# autojump > cd
[[ -s $(brew --prefix)/etc/profile.d/autojump.sh ]] && . $(brew --prefix)/etc/profile.d/autojump.sh

# 'thefuck' command correction 
eval "$(thefuck --alias)"

# _zplug package manager
# TODO: set it up, and have vim autocompletion working (didn't work before)

# neat colour schemes to use
BASE16_SHELL=$HOME/.config/base16-shell/
[ -n "$PS1" ] && [ -s $BASE16_SHELL/profile_helper.sh ] && eval "$($BASE16_SHELL/profile_helper.sh)"

# tabtab source for yarn package
# uninstall by removing these lines or running `tabtab uninstall yarn`
[[ -f /Users/nikivi/.yarn-cache/.global/node_modules/tabtab/.completions/yarn.zsh ]] && . /Users/nikivi/.yarn-cache/.global/node_modules/tabtab/.completions/yarn.zsh
