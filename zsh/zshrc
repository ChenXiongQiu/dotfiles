#functions

#(f)ind by (n)ame
#usage: fn foo
#to find all files containing 'foo' in the name
function fn() { ls **/*$1* }

#alt-s insert 'sudo' at start of line
insert_sudo () { zle beginning-of-line; zle -U "sudo " }
zle -N insert-sudo insert_sudo
bindkey "^[s" insert-sudo







