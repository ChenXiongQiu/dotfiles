" not utilising the full usefulness of it but I think it can be great
set relativenumber

" allows me to yank text to system clipboard
set clipboard=unnamed

" finally have a nice looking editor :D
let $NVIM_TUI_ENABLE_TRUE_COLOR=1

" syntax highlighting
syntax on

" vim-plug plugin manager
call plug#begin()
Plug 'tpope/vim-sensible'
Plug 'fatih/vim-go'
Plug 'morhetz/gruvbox'

call plug#end()

" activate the colour scheme
colorscheme gruvbox
" night mode
set background=dark 

